<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_landing3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jrinehartspokane.myapplication.Landing3">

    <Button
        android:text="Free Trial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:textAllCaps="false"
        android:textColor="?android:attr/colorEdgeEffect"
        android:background="@android:color/transparent"
        android:layout_marginEnd="19dp"
        android:fontFamily="sans-serif"
        android:textSize="24sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Log In"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:id="@+id/button2"
        android:background="@android:color/transparent"
        android:textAllCaps="false"
        android:textColor="?attr/colorAccent"
        android:fontFamily="sans-serif"
        android:onClick="btnLoginOnClick"
        android:textSize="24sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/dots3"
        android:id="@+id/imageView3"
        android:layout_marginBottom="13dp"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="|"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:textSize="24sp"
        android:textColor="?attr/colorAccent"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut imperdiet, risi sed congue blandit, metus est bibendum ente, ut ultricies augue tortor sed mauris. Vivamus neque sem, auctor nec nisi non, ultricies accumsan metus. Sed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginBottom="17dp"
        android:layout_above="@+id/imageView3"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Lorem ipsum dolor sit amet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        android:layout_above="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/basketball_player"
        android:id="@+id/imageView11"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/button2"
        android:layout_marginTop="30dp" />

</RelativeLayout>
