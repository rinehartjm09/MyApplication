<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jrinehartspokane.myapplication.MainActivity"
    android:background="#ffffff">


    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCancel"
        android:onClick="btnCancelOnClick"
        android:background="@drawable/cancel_border"
        android:textColor="#606060"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="32dp"
        android:layout_alignParentEnd="true"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/edtLoginName"
        android:hint="Username"
        android:background="@drawable/text_field_border"
        android:padding="12dp"
        android:layout_above="@+id/edtPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="?android:attr/navigationBarColor" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edtPassword"
        android:hint="Password"
        android:background="@drawable/text_field_border"
        android:padding="12dp"
        android:layout_marginBottom="58dp"
        android:layout_above="@+id/btnLogin"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="?android:attr/navigationBarColor" />

    <Button
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLogin"
        android:onClick="btnLoginOnClick"
        android:background="@drawable/login_border"
        android:textColor="#ffffff"
        android:layout_marginBottom="11dp"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_above="@+id/btnCancel"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/caasera_logo"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your account for everything Caasera."
        android:id="@+id/textView"
        android:textSize="16sp"
        android:typeface="normal"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="71dp"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
